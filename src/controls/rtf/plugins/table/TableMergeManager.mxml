<?xml version="1.0" encoding="utf-8"?>
<TableMergeManagerBase xmlns="controls.rtf.plugins.table.*" xmlns:mx="http://www.adobe.com/2006/mxml"
	width="300" height="170" showCloseButton="true"
	title="{resourceManager.getString('messages','rtf.tableManager')}" layout="vertical" paddingTop="10">
	<mx:HBox>
		<mx:Form paddingTop="0" paddingLeft="0" paddingRight="0" paddingBottom="0">
			<mx:FormItem>
				<mx:RadioButton group="{merge}" label="Merge right" value="1" selected="true"/>
			</mx:FormItem>
			<mx:FormItem>
				<mx:RadioButton group="{merge}" label="Merge left" value="2"/>
			</mx:FormItem>
			<mx:FormItem>
				<mx:RadioButton group="{merge}" label="Merge down" value="3"/>
			</mx:FormItem>
		</mx:Form>
	</mx:HBox>
	<mx:ApplicationControlBar cornerRadius="0" width="100%" horizontalAlign="right" alpha="1.0">
		<mx:Button id="btnMerge" label="{resourceManager.getString('messages','rtf.common.button.insert')}"/>
		<mx:Button id="btnCancel" label="{resourceManager.getString('messages','rtf.common.button.cancel')}"/>
	</mx:ApplicationControlBar>
</TableMergeManagerBase>